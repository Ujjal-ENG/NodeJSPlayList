{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "prettier", "airbnb-base"],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "consistent-return": "off",
        "no-process-exit": "off",
        "no-underscore-dangle": "off",
        "class-methods-use-this": "off",
        "no-return-await": "off",
        "no-param-reassign": "off",
        "object-shorthand": "off",
        "func-names": "off",
        "spaced-comment": "off",
        "no-console": "off",
        "indent": "error",
        "linebreak-style": "error",
        "no-var": "error",
        "camelcase": "error",
        "no-empty": "error",
        "default-case": "error",
        "eqeqeq": "error",
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 100,
                "tabWidth": 2,
                "semi": true
            }
        ]
    },
    "plugins": ["prettier"]
}
